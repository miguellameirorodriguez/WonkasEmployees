<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="IconTextButton">
        <item name="textAllCaps">false</item>
        <item name="iconSize">20dp</item>
        <item name="iconTint">@color/white</item>
        <item name="backgroundTint">@color/green</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="FilterButtonOff">
        <item name="textAllCaps">false</item>
        <item name="iconTint">@color/filter_background</item>
        <item name="iconPadding">5dp</item>
        <item name="backgroundTint">@color/gray</item>
        <item name="android:textColor">@color/text_gray</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="FilterButtonOn">
        <item name="textAllCaps">false</item>
        <item name="iconTint">@color/white</item>
        <item name="iconPadding">5dp</item>
        <item name="backgroundTint">@color/green</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>